        <p class="card-text">US${{this.price}}</p>


        <button type="submit" data-product-id="{{this._id}}" class="btn btn-primary add-to-cart-button">AÃ±adir al
          Carrito</button>


      </div>
    </div>
  </div>
  {{/each}}
</article>


